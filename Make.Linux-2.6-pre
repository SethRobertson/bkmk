# OS-specific Variables
#

ifeq ($(shell if ( grep -q "Fedora Core release 3" /etc/fedora-release 2>/dev/null || grep -q "Gentoo Base System" /etc/gentoo-release 2>/dev/null ) && [ -f /usr/lib/libssl.so -o -f /usr/lib64/libssl.so ]; then echo OK; fi), OK)
OPERATING_SYSTEM_OPENSSL_OK=true
endif

ifeq ($(shell if ( grep -q "Fedora Core release 3" /etc/fedora-release 2>/dev/null || grep -q "Gentoo Base System" /etc/gentoo-release 2>/dev/null ) && [ -f /usr/lib/libxml2.so -o -f /usr/lib64/libxml2.so ]; then echo OK; fi), OK)
OPERATING_SYSTEM_XML2_OK=true
endif

# Is not searched by default under all circumstances for some stupid reason
ifeq ($(shell uname -m),x86_64)
OS_LDS=-L/usr/lib64 -L/lib64
endif
