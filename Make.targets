#
# Tags support
#
nukeetags::
	> TAGS

nukectags::
	> tags

etags:: nukeetags
	$(MAKE) TAGCMD=$(ETAGS) TAGOUT=$(PWD)/TAGS subtags

ctags:: nukectags
	$(MAKE) TAGCMD=$(CTAGS) TAGOUT=$(PWD)/tags subtags

tags:: etags

subtags:: $(BK_SIMPLE_CSRC) $(BK_LARGE_CSRC) $(BK_LARGE_LIBCSRC) $(BK_LOCAL_CSRC) $(BK_LOCAL_OTHERTAGS)
	if [ "$^" ]; then $(TAGCMD) -a -o $(TAGOUT) $^; fi
	$(BK_SUBDIRRULE)

