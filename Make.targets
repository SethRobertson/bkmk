endif # BK_INSTALLDATADIR
ifneq ($(strip $(BK_INSTALLCONFIGDIR)),)
ifneq ($(strip $(BK_CONFIGFILES)),)
	$(MKDIR) $(BK_INSTALLCONFIGDIR)
	$(INSTALL) $(INSTALL_OTHERFLAGS) $(BK_CONFIGFILES) $(BK_INSTALLCONFIGDIR)
